# Local Development Environment Variables
# Copy this to .env for local testing (DO NOT COMMIT .env file)

# Django Settings - DEVELOPMENT MODE
SECRET_KEY=django-insecure-local-dev-key-for-testing-only-change-in-production
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (SQLite for local development)
# DATABASE_URL is optional for local dev - will use default SQLite

# Email Configuration (for testing contact form)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
